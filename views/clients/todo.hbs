{{#each places}}
  <div>
    <p>{{this.name}}</p>
    <img src="{{this.image_url}}">
    <p>{{this.description}}</p>
  </div>
    <a href="../clients/havedone/{{this.id}}/update"><button type="button">Update Visited</button></a>

{{/each}}
<form action="/clients/todo" method="post">
  <label for="text">Name of Place</label>
  <input type="text" name="name" placeholder="{{this.name}}">
  <br>
  <label id="address" for="address">Address</label>
  <input name="address" type="address" value="address" placeholder="enter address">
  <br>
  <label for="textarea">Description</label>
  <textarea name="description" rows=5>{{this.description}}</textarea>
  <br>
  <label for="url">Image URL</label>
  <input type="url" name="image_url" placeholder="{{this.image_url}}">
  <br>
  <select name="category_id">
    {{#each categories}}
      <option value="{{this.id}}">{{this.name}}</option>
    {{/each}}
  </select>
  <input type="hidden" name="user_created" value="true">
  <br>
  <button type="submit">Submit</button>
</form>
<a href="../clients/todo/update"><button type="button">Update Info</button></a>
